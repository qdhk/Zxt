<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/noti_img"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/ncepu_logo2"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/noti_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/noti_img"
            android:text="华北电力大学研究生院华北电力大学研究生院华北电力大学研究生院..."
            android:textSize="15sp" />

        <TextView
            android:id="@+id/noti_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/noti_title"
            android:layout_marginRight="12.0dip"
            android:layout_marginTop="4dp"
            android:text="2015-05-12 "
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/noti_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="14.0dip"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/arrow_right_normal" />
    </RelativeLayout>

</RelativeLayout>